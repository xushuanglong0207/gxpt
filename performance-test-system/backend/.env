# 应用环境
NODE_ENV=production

# 服务器配置
PORT=3001

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=performance_test_system
DB_USER=postgres
DB_PASSWORD=postgres

# JWT配置
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 日志配置
LOG_LEVEL=info

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB

# CORS配置
CORS_ORIGIN=http://localhost:3000 